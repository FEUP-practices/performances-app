<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/image_style"
            android:id="@+id/performace_card_image"
            android:layout_width="126dp"
            android:layout_height="118dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/performace_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cirque du Soleil"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="10sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/performace_card_image"
            app:layout_constraintTop_toTopOf="@+id/performace_card_image" />

        <TextView
            android:id="@+id/performace_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/24/22"
            android:layout_marginStart="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/performace_card_image"
            app:layout_constraintStart_toEndOf="@+id/performace_card_image"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/performace_card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,50 â‚¬"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/performace_card_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/performace_card_date" />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/performace_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x 24"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            app:layout_constraintBottom_toTopOf="@+id/performace_card_date"
            app:layout_constraintStart_toEndOf="@+id/performace_card_image"
            app:layout_constraintTop_toBottomOf="@+id/performace_card_title"
            app:srcCompat="@drawable/ic_person" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>